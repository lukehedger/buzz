{
  "name": "@web3/buzz",
  "version": "0.0.0",
  "description": "Swarm JavaScript API",
  "main": "dist/buzz.js",
  "module": "dist/buzz.mjs",
  "jsnext:main": "dist/buzz.mjs",
  "directories": {
    "doc": "doc",
    "example": "example",
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web3/buzz.git"
  },
  "keywords": [
    "buzz",
    "bzz",
    "ethereum",
    "swarm",
    "web3"
  ],
  "author": "web3 (https://web3.works/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/web3/buzz/issues"
  },
  "homepage": "https://github.com/web3/buzz#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix \"lib/**/*.js\"",
      "prettier --write --no-semi --single-quote --trailing-comma=es5",
      "git add"
    ]
  },
  "pre-commit": {
    "run": [
      "lint:staged",
      "test"
    ],
    "silent": true
  },
  "scripts": {
    "lint:staged": "lint-staged",
    "build": "rollup -c",
    "build:test": "rollup -c --environment TEST",
    "release": "npm run build && np",
    "test": "jest"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "np": "^2.20.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-butternut": "^0.1.0"
  }
}
